package src;

public class Playmaker extends Player{
	
	String style = "Playmaker"; 
	
	public Playmaker() {
		super();
		style = "Playmaker"; 
	}
	
	public Playmaker(String name, int weight, String height, String position) {
		this.name = name;
		this.weight = weight; 
		this.height = height; 
		this.position = position;
		style = "Playmaker"; 
		}
	
	@Override
	public String toString() {
		return "My name is " + name + ". I weigh " + weight + " pounds." +  
				"I'm also: " + height + " and I play " + position + "." + 
			" I am the Playmaker for the team.";
	}	
	
	void Scan() {
		System.out.println(name  + " scans the court..");
		System.out.println("and finds his teammate for the shot!"); 
	}

}
